<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:stretchColumns="*">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/primeiraColuna"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/fundo"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/borda_lista"
            android:text="20/09/2020" />

        <TextView
            android:id="@+id/segundaColuna"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/fundo"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/borda_lista"
            android:text="09:00" />

        <TextView
            android:id="@+id/terceiraColuna"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/fundo"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/borda_lista"
            android:text="19:00" />

        <TextView
            android:id="@+id/quartaColuna"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/fundo"
            android:fontFamily="@font/montserrat"
            android:text="01:00" />
    </TableRow>
</TableLayout>